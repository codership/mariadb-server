# galera#505 - Change of pc.weight wsrep param will be correctly
# stored in wsrep_provider_pc_weight variable

--source include/galera_cluster.inc

--connection node_1

SET SESSION wsrep_sync_wait=0;
--let $galera_version=25.3.24
source ../../wsrep/include/check_galera_version.inc;

SET SESSION wsrep_sync_wait=DEFAULT;
SET GLOBAL wsrep_provider_pc_weight='3';

SHOW GLOBAL VARIABLES LIKE 'wsrep_provider_pc_weight';

SET GLOBAL wsrep_provider_pc_weight=DEFAULT;
