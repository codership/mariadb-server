CREATE TABLE t (i int primary key, j int);
INSERT INTO t VALUES (1,0),(2,0),(3,0);

--connection node_1a
BEGIN;
UPDATE t SET j=11 WHERE i=1;

--connection node_1b
BEGIN;
UPDATE t SET j=22 WHERE i=2;

--connection node_1c
BEGIN;
UPDATE t SET j=33 WHERE i=3;

--connection node_1a
--send UPDATE t SET j=11 WHERE i=2;

--connection node_1b
--send UPDATE t SET j=22 WHERE i=3;

--connection node_2
UPDATE t SET j=200 WHERE i=3;

--connection node_1c
--error ER_LOCK_DEADLOCK
UPDATE t SET j=33 WHERE i=1;

--connection node_1b
--reap
--error 0,ER_LOCK_DEADLOCK
COMMIT;

SELECT * FROM t;

--connection node_1a
--reap
COMMIT;
SELECT * FROM t;

--connection node_1c
SELECT * FROM t;

DROP TABLE t;


